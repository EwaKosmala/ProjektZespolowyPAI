@model lab1_gr1.ViewModels.UserVM.LoginVM

@{
    ViewData["Title"] = "Logowanie";
}

<h2>Logowanie</h2>

<form asp-action="Login" asp-controller="Auth" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Zaloguj</button>

    @* Pokazywanie błędu z ModelState lub ViewBag *@
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger mt-3">@ViewBag.Error</div>
    }
</form>

<p class="mt-3">
    Nie masz konta? <a asp-action="Register" asp-controller="Auth">Zarejestruj się</a>
</p>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
