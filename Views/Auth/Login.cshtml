@model lab1_gr1.ViewModels.UserVM.LoginVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Logowanie";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">

            <div class="card shadow-sm">
                <div class="card-header">
                    <h3 class="mb-0">@ViewData["Title"]</h3>
                </div>

                <div class="card-body">
                    <form asp-action="Login" method="post">

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        }

                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger">@ViewBag.Error</div>
                        }

                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">Nazwa użytkownika</label>
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Hasło</label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">Zaloguj się</button>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center">
                    Nie masz konta? <a asp-action="Register">Zarejestruj się</a>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}