@model lab1_gr1.ViewModels.UserVM.LoginVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Mój Profil";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-user-circle"></i> Mój Profil</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-sm-4 text-muted">Nazwa użytkownika:</div>
                        <div class="col-sm-8 fw-bold">@Model.Username</div>
                    </div>

                    <hr />

                    <h5 class="mb-3">Bezpieczeństwo</h5>
                    <div class="d-grid gap-2 col-md-6">
                        <a asp-action="ChangePassword" class="btn btn-outline-primary">
                            <i class="fas fa-key"></i> Zmień hasło
                        </a>
                    </div>

                    <hr class="mt-4" />

                    <h5 class="mb-3 text-danger">Strefa niebezpieczna</h5>
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i> Usunięcie konta jest nieodwracalne. Stracisz wszystkie swoje przepisy i listy zakupów.
                    </div>
                    <div class="d-grid gap-2 col-md-6">
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteAccountModal">
                            <i class="fas fa-trash-alt"></i> Usuń konto
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteAccountModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Potwierdź usunięcie konta</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Czy na pewno chcesz usunąć swoje konto? <br />
                <strong>Tej operacji nie można cofnąć!</strong>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anuluj</button>
                <form asp-action="DeleteAccount" method="post">
                    <button type="submit" class="btn btn-danger">Tak, usuń moje konto</button>
                </form>
            </div>
        </div>
    </div>
</div>