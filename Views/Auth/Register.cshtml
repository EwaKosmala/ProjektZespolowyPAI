@{
    ViewData["Title"] = "Rejestracja";
}

<h2>Rejestracja</h2>

<form method="post" asp-action="Register" asp-controller="Auth">
    <div class="form-group">
        <label>Nazwa użytkownika</label>
        <input type="text" name="Username" class="form-control" required />
    </div>

    <div class="form-group mt-2">
        <label>Hasło</label>
        <input type="password" name="Password" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success mt-3">Zarejestruj</button>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success mt-3">@ViewBag.Message</div>
    }

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger mt-3">@ViewBag.Error</div>
    }
</form>

<p class="mt-3">
    Masz już konto? <a asp-action="Login" asp-controller="Auth">Zaloguj się</a>
</p>
