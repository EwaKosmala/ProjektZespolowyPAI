@model ListaZakupow.Model.DataModels.Recipe
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Szczegóły przepisu";

    // Helper do mapowania dni tygodnia (Niedziela=0, ... Sobota=6)
    var daysOfWeek = new Dictionary<int, string>
    {
        { 1, "Pon" }, { 2, "Wt" }, { 3, "Śr" }, { 4, "Czw" }, { 5, "Pt" }, { 6, "Sob" }, { 0, "Nd" }
    };
}

<div class="container my-4">

    <div class="mb-4">
        <h1 class="display-5">@Model.Name</h1>
        <p class="lead">@Model.Description</p>
    </div>

    @if (Model.RecipeSchedules != null && Model.RecipeSchedules.Any())
    {
        <div class="mb-3">
            <strong>Zaplanowano na:</strong>
            @foreach (var schedule in Model.RecipeSchedules.OrderBy(s => s.DayOfWeek))
            {
                <span class="badge bg-info text-dark">
                    @(daysOfWeek.ContainsKey(schedule.DayOfWeek) ? daysOfWeek[schedule.DayOfWeek] : "Błąd")
                </span>
            }
        </div>
    }

    <hr />

    <div class="row">

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h4 class="mb-0">Składniki</h4>
                </div>
                <ul class="list-group list-group-flush">
                    @if (Model.RecipeIngredients != null && Model.RecipeIngredients.Any())
                    {
                        foreach (var ri in Model.RecipeIngredients)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <strong>@ri.Ingredient.Name</strong>
                                <span class="text-muted">@ri.Quantity</span>
                            </li>
                        }
                    }
                    else
                    {
                        <li class="list-group-item">Brak składników dla tego przepisu.</li>
                    }
                </ul>
            </div>
        </div>

        <div class="col-md-8">
            <h2>Instrukcje</h2>

            <div class-="instructions-text" style="white-space: pre-wrap;">
                @Model.Instructions
            </div>
        </div>
    </div>

    <div class="mt-5 border-top pt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edytuj</a>
        <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
    </div>

</div>