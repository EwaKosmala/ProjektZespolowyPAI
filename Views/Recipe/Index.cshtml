@model IEnumerable<lab1_gr1.ViewModels.RecipeVM.RecipeListVM>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "Moje Przepisy";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>@ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Dodaj nowy przepis
    </a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info text-center" role="alert">
        <h4 class="alert-heading">Nie masz jeszcze żadnych przepisów!</h4>
        <p>Kliknij przycisk "Dodaj nowy przepis", aby stworzyć swój pierwszy.</p>
    </div>
}
else
{
    <div class="row">
        @foreach (var recipe in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@recipe.Name</h5>
                        <p class="card-text text-muted flex-grow-1">
                            @(string.IsNullOrEmpty(recipe.Description) ? "Brak opisu dla tego przepisu." : recipe.Description)
                        </p>

                        <div class="mt-auto d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@recipe.Id" class="btn btn-outline-info btn-sm flex-fill">
                                Szczegóły
                            </a>
                            <a asp-action="Edit" asp-route-id="@recipe.Id" class="btn btn-outline-secondary btn-sm flex-fill">
                                Edytuj
                            </a>
                            <button type="button" class="btn btn-outline-danger btn-sm"
                                    data-bs-toggle="modal"
                                    data-bs-target="#deleteRecipeModal"
                                    data-bs-recipename="@recipe.Name"
                                    data-bs-recipeid="@recipe.Id">
                                Usuń
                            </button>
                        </div>
                    </div>
                    <div class="card-footer text-muted">
                        Dodano: @recipe.CreatedAt.ToShortDateString()
                    </div>
                </div>
            </div>
        }
    </div>
}

<div class="modal fade" id="deleteRecipeModal" tabindex="-1" aria-labelledby="deleteRecipeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteRecipeModalLabel">Potwierdź usunięcie</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Czy na pewno chcesz usunąć przepis: <strong id="modalRecipeName"></strong>?
                <p class="text-danger mt-2">Tej operacji nie można cofnąć.</p>
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" method="post" id="deleteRecipeForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="modalRecipeId" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anuluj</button>
                    <button type="submit" class="btn btn-danger">Usuń</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var deleteModal = document.getElementById('deleteRecipeModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var recipeName = button.getAttribute('data-bs-recipename');
            var recipeId = button.getAttribute('data-bs-recipeid');

            var modalNameElement = deleteModal.querySelector('#modalRecipeName');
            var modalIdInput = deleteModal.querySelector('#modalRecipeId');

            modalNameElement.textContent = recipeName;
            modalIdInput.value = recipeId;
        });
    </script>
}