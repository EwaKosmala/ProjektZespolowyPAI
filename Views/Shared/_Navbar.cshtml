@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    // Pobieramy nazwę użytkownika z sesji, jeśli istnieje
    var username = HttpContextAccessor.HttpContext?.Session.GetString("Username");
}

<nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
    <div class="container-fluid">

        <a class="navbar-brand" asp-controller="Recipe" asp-action="Index">
            <i class="fas fa-utensils"></i> Planer Posiłków
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="mainNavbar">

            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                @if (username != null)
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Recipe" asp-action="Index">Moje Przepisy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="RecipeSchedule" asp-action="Week">Plan Posiłków</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="ShoppingList" asp-action="Index">Listy Zakupów</a>
                    </li>
                }
            </ul>

            <ul class="navbar-nav">
                @if (username != null)
                {
                    <li class="nav-item">
                        <span class="navbar-text me-3">
                            Witaj, <strong>@username</strong>!
                        </span>
                    </li>
                    <li class="nav-item">
                        <form asp-controller="Auth" asp-action="Logout" method="post" class="d-flex">
                            <button type="submit" class="btn btn-outline-light">Wyloguj</button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Auth" asp-action="Login">Logowanie</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Auth" asp-action="Register">Rejestracja</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>