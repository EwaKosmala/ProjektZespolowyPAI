@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    Layout = null;
    var username = HttpContextAccessor.HttpContext?.Session.GetString("Username");
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Planer Posiłków</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700;800&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
</head>
<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container-fluid">

            <a class="navbar-brand"
               asp-controller="@(username != null ? "Recipe" : "Auth")"
               asp-action="@(username != null ? "Index" : "Login")">
                <i class="fas fa-utensils"></i> Planer Posiłków
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    @if (username != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Recipe" asp-action="Index">Moje Przepisy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="RecipeSchedule" asp-action="Week">Plan Posiłków</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="ShoppingList" asp-action="Index">Listy Zakupów</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Recipe" asp-action="Browse">Przeglądaj</a>
                        </li>
                    }
                </ul>
                <ul class="navbar-nav align-items-center">
                    @if (username != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center gap-2 me-3" asp-controller="Auth" asp-action="LoggedIn" title="Zarządzaj kontem">
                                <span>Witaj,</span>
                                <strong>@username</strong>
                                <i class="fas fa-user-circle fa-lg"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Auth" asp-action="Logout" method="post" class="d-flex m-0">
                                <button type="submit" class="btn btn-sm btn-outline-danger">Wyloguj</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Auth" asp-action="Login">Logowanie</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Auth" asp-action="Register">Rejestracja</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="container py-4">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        @RenderBody()
    </main>

    <footer class="text-center text-muted py-3 border-top mt-5">
        <small>© @DateTime.Now.Year - Projekt PAI</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>