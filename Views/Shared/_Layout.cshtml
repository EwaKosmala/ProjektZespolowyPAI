@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PAI Project</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">PAI Project</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Recipe" asp-action="Index">Przepisy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Ingredient" asp-action="Index">Składniki</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="ShoppingList" asp-action="Index">Lista zakupów</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="RecipeSchedule" asp-action="Index">Harmonogram</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Auth" asp-action="Login">Zaloguj</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Auth" asp-action="Register">Zarejestruj</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="text-center text-muted py-3 border-top mt-5">
        <small>© @DateTime.Now.Year - Projekt PAI</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
