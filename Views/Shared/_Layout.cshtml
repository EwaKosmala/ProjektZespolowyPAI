@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    Layout = null;
    // Pobieramy nazwę użytkownika z sesji, aby sprawdzić, czy jest zalogowany
    var username = HttpContextAccessor.HttpContext?.Session.GetString("Username");
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Planer Posiłków</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</head>
<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container-fluid">

            <a class="navbar-brand" asp-controller="Recipe" asp-action="Index">
                <i class="fas fa-utensils"></i> Planer Posiłków
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">

                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    @if (username != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Recipe" asp-action="Index">Moje Przepisy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="RecipeSchedule" asp-action="Week">Plan Posiłków</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="ShoppingList" asp-action="Index">Listy Zakupów</a>
                        </li>
                    }
                </ul>

                <ul class="navbar-nav">
                    @if (username != null)
                    {
                        <li class="nav-item">
                            <span class="navbar-text me-3">
                                Witaj, <strong>@username</strong>!
                            </span>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Auth" asp-action="Logout" method="post" class="d-flex">
                                <button type="submit" class="btn btn-outline-light">Wyloguj</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Auth" asp-action="Login">Logowanie</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Auth" asp-action="Register">Rejestracja</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="text-center text-muted py-3 border-top mt-5">
        <small>© @DateTime.Now.Year - Projekt PAI</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>