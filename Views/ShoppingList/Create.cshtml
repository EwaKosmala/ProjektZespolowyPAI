@model lab1_gr1.ViewModels.ShoppingListVM.CreateShoppingListVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<style>
    .alert-danger ul {
        list-style: none;
        padding-left: 0;
        margin: 0;
    }
</style>
@{
    ViewData["Title"] = "Nowa lista zakupów";
    // Jeśli model ma Id > 0, oznacza to, że edytujemy istniejącą listę
    if (Model.Id > 0)
    {
        ViewData["Title"] = "Edytuj listę zakupów";
    }
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <h2 class="mb-4">@ViewData["Title"]</h2>

            <form asp-action="@(Model.Id > 0 ? "Edit" : "Create")" method="post">

                <input type="hidden" asp-for="Id" />
                @Html.AntiForgeryToken()

                @if (!ViewData.ModelState.IsValid)
                {
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                }

                <div class="card shadow-sm">
                    <div class="card-header">
                        <h5 class="mb-0">Składniki</h5>
                    </div>

                    <ul class="list-group list-group-flush">
                        @for (int i = 0; i < Model.Items.Count; i++)
                        {
                            <li class="list-group-item">
                                <div class="row align-items-center">
                                    <div class="col-md-6">
                                        <div class="form-check">
                                            <input type="hidden" asp-for="Items[i].IngredientId" />
                                            <input type="hidden" asp-for="Items[i].IngredientName" />

                                            <input class="form-check-input" type="checkbox" asp-for="Items[i].IsSelected" />
                                            <label class="form-check-label" asp-for="Items[i].IsSelected">
                                                <strong>@Model.Items[i].IngredientName</strong>
                                            </label>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="input-group input-group-sm">
                                            <span class="input-group-text">Ilość:</span>
                                            <input type="text" class="form-control" asp-for="Items[i].Quantity" placeholder="np. 100g, 2 szt." />
                                        </div>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">Zapisz listę</button>
                    @if (ViewBag.ShowBackButton == true)
                    {
                        <a href="@ViewBag.ReturnUrl" class="btn btn-outline-secondary">Wróć</a>
                    }
                    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
                </div>
            </form>
        </div>
    </div>
</div>