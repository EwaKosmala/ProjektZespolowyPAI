@model lab1_gr1.ViewModels.ShoppingListVM.CreateShoppingListFromDaysVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Wygeneruj listę zakupów";

    // Słownik do mapowania dni tygodnia
    var daysOfWeek = new Dictionary<int, string>
    {
        { 1, "Poniedziałek" }, { 2, "Wtorek" }, { 3, "Środa" },
        { 4, "Czwartek" }, { 5, "Piątek" }, { 6, "Sobota" }, { 0, "Niedziela" }
    };
}
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
<div class="container my-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h3 class="mb-0">@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <p class="card-text">Wybierz dni z Twojego planu posiłków, na podstawie których mamy wygenerować listę zakupów.</p>

                    <form asp-action="FromDays" method="post">

                        <div class="row mb-3">
                            @foreach (var day in daysOfWeek)
                            {
                                <div class="col-md-4 col-6">
                                    <div class="form-check fs-5">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               name="SelectedDays"
                                               value="@day.Key"
                                               id="day-@day.Key"
                                               @(Model.SelectedDays.Contains(day.Key) ? "checked" : "") />
                                        <label class="form-check-label" for="day-@day.Key">
                                            @day.Value
                                        </label>
                                    </div>
                                </div>
                            }
                        </div>

                        <hr />

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-cogs"></i> Generuj
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>